# =============================================================================
# Environment Variables Configuration for VC AI Knowledge Hub
# Copy this file to .env and update with your values
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Configuration
# -----------------------------------------------------------------------------
POSTGRES_PASSWORD=root
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
APP_PORT=8080
SHOW_SQL=false

# JVM Options (adjust based on available memory)
JAVA_OPTS=-Xmx1024m -Xms512m

# -----------------------------------------------------------------------------
# Embedding Service Configuration
# -----------------------------------------------------------------------------
EMBEDDING_PORT=8000
EMBEDDING_MODEL=all-MiniLM-L6-v2

# -----------------------------------------------------------------------------
# GitHub Configuration
# Get token from: https://github.com/settings/tokens
# -----------------------------------------------------------------------------
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO_OWNER=your_github_username
GITHUB_REPO_NAME=your_repo_name

# -----------------------------------------------------------------------------
# OpenAI/LLM API Configuration
# Get API key from your LLM provider (OpenAI, DeepSeek, etc.)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your_openai_or_llm_api_key_here
OPENAI_API_URL=https://api.deepseek.com/chat/completions

# -----------------------------------------------------------------------------
# MCP Server Configuration (Optional)
# Enable for advanced SQL query capabilities
# -----------------------------------------------------------------------------
MCP_ENABLED=false
MCP_SERVER_URL=http://mcp_server:8000
MCP_PORT=3000

# -----------------------------------------------------------------------------
# Production Settings
# -----------------------------------------------------------------------------
# Uncomment for production
# SHOW_SQL=false
# JAVA_OPTS=-Xmx2048m -Xms1024m -XX:+UseG1GC

